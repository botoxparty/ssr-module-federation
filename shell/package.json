{
  "name": "@server-side-rendering/shell",
  "description": "React architecture at scale with module federation",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "Adam Hammad <mail@adamham.dev>",
  "license": "MIT",
  "scripts": {
    "hmr": "nodemon --config ./nodemon.json --exec yarn start:prod",
    "start": "npm run clean && cross-env NODE_ENV=development PORT=3000 babel-node server/index.js",
    "start:prod": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node dist/server/main.js",
    "build": "npm run build:server && npm run build:client",
    "build:client": "rimraf dist/client && cross-env NODE_ENV=production webpack --progress --config build/webpack.config.js/client.prod.js",
    "build:server": "cross-env NODE_ENV=production webpack --progress --config build/webpack.config.js/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel server -d dist/server",
    "clean": "rm -rf dist",
    "production:test": "yarn run build && rm -rf node_modules && NODE_ENV=production npm install --production && yarn serve"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cross-env": "^7.0.0",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.1",
    "enhanced-resolve": "^5.0.0",
    "express": "^4.17.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.0.0",
    "regenerator-runtime": "^0.13.2"
  },
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.18.2",
    "@babel/node": "7.17.10",
    "@babel/plugin-proposal-class-properties": "7.17.12",
    "@babel/plugin-proposal-json-strings": "7.17.12",
    "@babel/plugin-proposal-object-rest-spread": "7.18.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-syntax-import-meta": "7.10.4",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-react": "7.17.12",
    "autoprefixer": "10.4.7",
    "babel-loader": "8.2.5",
    "chalk": "5.0.1",
    "css-loader": "6.7.1",
    "cssnano": "5.1.10",
    "file-loader": "6.2.0",
    "ignore-loader": "0.1.2",
    "mini-css-extract-plugin": "2.6.0",
    "node-fetch": "3.2.5",
    "nodemon": "2.0.16",
    "postcss-flexbugs-fixes": "5.0.2",
    "postcss-import": "14.1.0",
    "postcss-loader": "7.0.0",
    "react-hot-loader": "4.13.0",
    "rimraf": "3.0.2",
    "sass": "1.52.1",
    "sass-loader": "13.0.0",
    "style-loader": "3.3.1",
    "url-loader": "4.1.1",
    "webpack": "5.73.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-middleware": "5.3.3",
    "webpack-hot-middleware": "2.25.1",
    "webpack-hot-server-middleware": "0.6.1",
    "webpack-merge": "5.8.0",
    "webpack-node-externals": "3.0.0"
  }
}
